<UserControl x:Class="ElleseesUI.VECI.UI.Controls.DataForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElleseesUI.VECI.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="270">
    <Grid Background="#313131">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <TextBlock Foreground="White"
                       FontFamily="../../../Fonts/#Space Grotesk"
                       FontSize="18"
                       VerticalAlignment="Center"
                       Margin="4,0,0,0"
                       Text="{Binding DisplayFormData}" />
            <TextBox Foreground="White"
                     Background="#242424"
                     Width="200"
                     Height="24"
                     VerticalAlignment="Center"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     TextAlignment="Center"
                     BorderThickness="0"
                     x:Name="DataValue" />
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="ElleseesUI.Controls.TimelineObjects.VideoVisibility"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElleseesUI.Controls.TimelineObjects"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="140">
    <Border BorderThickness="2"
            BorderBrush="Yellow"
            Height="40"
            CornerRadius="4"
            Margin="0,0,18,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" Background="Yellow" />

            <Grid Background="#313131" />

            <TextBlock Grid.Column="0"
                       Background="#313131"
                       FontFamily="../../Fonts/#Space Grotesk"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="{Binding ChildValue}"
                       TextWrapping="Wrap"
                       x:Name="DisplayedText" />
        </Grid>
    </Border>
</UserControl>
